@model BusinessManagementSystemApp.Models.SalesSaveViewModel
<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>SL</th>
        <th>Product</th>
        <th>Quantity</th>
        <th>Unit Price</th>
        <th>Total</th>
    </tr>
    @if (Model != null && Model.SalesDetailsList != null && Model.SalesDetailsList.Count > 0)
    {
        int i = 1;
        //int total = 0;
        var grantTotal = 0;
        foreach (var v in Model.SalesDetailsList)
        {
            grantTotal = Convert.ToInt32(grantTotal + v.SubTotal);
    <tr>
        <td>@(i++)</td>
        <td>@v.ProductsId</td>
        <td>@v.Quantity</td>
        <td>@v.UnitPrice</td>
        <td>@v.SubTotal</td>
    </tr>
        }
    <tr>
        <td class="text-right" colspan="4">Total</td>
        <td>@grantTotal</td>
    </tr>

    }

</table>